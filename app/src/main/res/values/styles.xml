<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">@color/colorTabItemTextSelected</item>
        <item name="material_dialog_message_text_color">@color/colorTabItemText</item>
        <item name="material_dialog_positive_button_color">@color/colorBtnStartPreparingGreen</item>
        <item name="material_dialog_positive_button_text_color">@color/colorWhite</item>
        <item name="material_dialog_negative_button_text_color">@color/colorTabItemTextSelected</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.AppTheme.TextInputEditText.OutlinedBox" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/colorTabItemTextSelected</item>

    </style>

    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputEditText.OutlinedBox</item>
    </style>




    <!--Loading progress bar style -->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorYallow</item>
    </style>

    <!--Animation for popup dialog -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!--text button style-->
    <style name="textButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Card view login screen edit text style-->
    <style name="MyCardViewStyleLogin" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">@dimen/_20sdp</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="contentPaddingBottom">@dimen/_10sdp</item>
        <item name="contentPaddingTop">@dimen/_10sdp</item>
        <item name="contentPaddingLeft">@dimen/_12sdp</item>
        <item name="contentPaddingRight">@dimen/_10sdp</item>
    </style>

    <!--Round button style-->
    <style name="material_button_round" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/p_semibold</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
    </style>

    <!--Yallow checkbox theme -->
    <style name="checkboxYallow" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorSkipWelcome</item>
        <item name="colorControlActivated">@color/colorYallow</item>
    </style>

    <!--Toolbar style home -->
    <style name="Toolbar_home">
        <item name="android:fontFamily">@font/p_medium</item>
        <item name="android:textColor">@color/colorNextWelcome</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <!--Bottom navigation view inactive text size -->
    <style name="BottomNavigationView.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/p_light</item>
    </style>

    <!--Bottom navigation view active text size -->
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/p_light</item>
    </style>

    <!--Tab layout menu text style -->
    <style name="TabTextAppearance.menu" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorNextWelcome</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/p_medium</item>
    </style>

    // Splash theme
    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="OrderTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="OrderTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/OrderTabTextAppearance</item>
    </style>

    <style name="BtnLogin">
        <item name="android:background">@drawable/background_btn_login</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/bwnistageo_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ErrorTextTheme">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="android:textColor">@color/colorCountdownTimer</item>
    </style>

    <style name="orderTotalTextStyle">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:fontFamily">@font/bwnistageo_regular</item>
        <item name="android:textColor">@color/colorWaiterIdText</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <dimen name="_16sp">16sp</dimen>
    <dimen name="_18sp">18sp</dimen>
</resources>
